#!/usr/bin/perl -w
#
use Math::Trig;

sub log2 { log( $_[0] ) / log( 2 ) }

sub f2c  { ($_[0] - 32.0) * 5.0/9.0 }
sub c2f  { $_[0] * 9.0/5.0 + 32     }

sub sum  { my $s = 0.0; for(@_) { $s += $_; } return $s; }

my $expr = join( " ", @ARGV );
my $val  = eval( $expr );
printf "%d      %0.30f  0x%x  0b%b\n", $val, $val, $val, $val;
