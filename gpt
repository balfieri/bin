#!/usr/bin/python3
#
# coding=utf-8
#

import os
import sys
import openai
import readchar

openai.api_key = os.getenv( 'OPENAI_API_KEY' )
model_engine   = 'gpt-3.5-turbo'

messages=[ {'role': 'system', 'content': 'Ask me anything.'} ]
while True:
    if True:
        # this has a problem with echoing utf-8 characters incorrectly as they are typed using press-and-hold:
        prompt = input( 'you: ' )
    else:
        # this has a different problem:
        print( 'you: ', end='', flush=True )
        prompt = ''
        while True:
            ch = readchar.readchar();
            print( ch, flush=True )
            if ch == '\n': break
            prompt += ch

    messages.append( {'role': 'user', 'content': prompt} )

    response = openai.ChatCompletion.create(
        model=model_engine,
        messages=messages,
        max_tokens=1024,
        n=1,
        temperature=0.5,
        top_p=1,
        frequency_penalty=0.0,
        presence_penalty=0.6,
    )
    resp = response['choices'][0]['message']['content']
    messages.append( {'role': 'assistant', 'content': resp} )
    print( f'gpt: {resp}' )
    print()
